<h1>Customers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Company</th>
      <th>Location</th>
      <th>Primary contact person</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

 

    <% @customers.each do |customer| %>
     <% if current_user == customer.user %>
      <tr>
        <td><%= customer.company %></td>
        <td><%= customer.location %></td>
        <td><%= customer.primary_contact_person %></td>
        <td><%= link_to 'Show', customer %></td>
          <% if current_user == customer.user %>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  <% end %>
</table>

<br />

<%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
